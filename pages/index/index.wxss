/* 添加按钮 */
.add {
  opacity: 0.9;
  position: fixed;
  bottom: 80rpx;
  right: 80rpx;
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  background: #3ba3d0;
}

.add>.x,.add>.y {
  opacity: 10;
  position: absolute;
  background: #fff;
}

.add>.x {
  left: 50%;
  top: 50%;
  margin-left: -7.5rpx;
  margin-top: -30rpx;
  height: 60rpx;
  width: 15rpx;
}

.add>.y {
  left: 50%;
  top: 50%;
  margin-left: -30rpx;
  margin-top: -7.5rpx;
  height: 15rpx;
  width: 60rpx;
}
